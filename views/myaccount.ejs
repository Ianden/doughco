<div class="container">
  <h2>my account settings</h2>
  <div class="row">
    <div class="col">
      <!-- credit card -->
     <p>Payment Info</p>
       <form>
  <div class="form-row">
    <div class="col">

      <label for="user_name">Owner:</label>
      <input type="text" class="form-control" placeholder="John Smith">
    </div>
    <div class="col">
      <label for="cvv">CVV:</label>
      <input type="text" class="form-control" placeholder="***">
    </div>
    <div class="col">
      <label for="card_number">Card Number:</label>
      <input type="text" class="form-control" placeholder="************5555">
    </div>
  </div>
  <button type="submit">Update</button>
</form>
  </div>
</div>
  <div class="row">
    <div class="col">
      <p>Contact Info</p>
   <form>
  <div class="form-row">
    <div class="col">
      <label for="user_email">Email:</label>
      <input type="email" class="form-control" placeholder="example@doughco.com">
    </div>
    <div class="col">
      <label for="user_phone">Telephone:</label>
      <input type="tel" class="form-control" placeholder="555-555-5555">
    </div>
  </div>

  <button type="submit">Update</button>
</form>
