<!doctype html>
<html lang="en">
  <head>
    <title>My account</title>

    <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
    <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
    <link rel="stylesheet" href="/styles/layout.css" type="text/css" />
    <link rel="stylesheet" href="/styles/myaccount.css" type="text/css" />
    <link rel="stylesheet" href="/styles/navbar.css" type="text/css" />
    <link rel="stylesheet" href="/styles/footer.css" type="text/css" />
    <link rel="stylesheet" href="/styles/navbar.css" type="text/css" />

    <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
    <script>const currUser = "<%= currUser %>";</script>
    <script type="text/javascript" src="/scripts/account-details.js"></script>

    <!-- bootstrap -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>

    <!-- fonts -->

     <link href="https://fonts.googleapis.com/css?family=Bungee+Shade" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Arbutus+Slab" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Chivo" rel="stylesheet">

  </head>

  <body>

  <% include partials/navbar %>

  <div class="container">
    <p class= "main-heading">my account settings<p>

    <div class="row">
      <div class="col">
        <!-- credit card -->
        <p class="subheading">Payment Info</p>
        <form id="credit-card">
        <div class="form-row">
          <div class="col">

          <label for="user_name">Name:</label>
          <input id="user-name" type="text" class="form-control" placeholder="Joe Dough">
        </div>
        </div>
        <div class="form-row">
          <div class="col">

            <label for="card_number">Card Number:</label>
            <input id="card-number" type="text" class="form-control" placeholder="************5555">

          <!-- /col -->
          </div>
          <div class="col">

            <label for="card_expire">Expiry Date:</label>
            <input id="card-expire" type="text" class="form-control" placeholder="08/19">

          <!-- /col -->
          </div>
          <div class="col">

            <label for="card_cvv">CVV</label>
            <input id="card-cvv" type="text" class="form-control" placeholder="123">

          <!-- /col -->
          </div>
        <!-- /form-row -->
        </div>
        <button type="submit">Update</button>
        </form>
      <!-- /col -->
      </div>
    <!-- /row -->
    </div>

    <div class="row">
      <div class="col">
        <!-- contact information -->
        <p class ="subheading">Contact Info</p>
        <form id="contact-info">
        <div class="form-row">
          <div class="col">

            <label for="user_email">Email:</label>
            <input id="email" type="email" class="form-control" placeholder="example@doughco.com">
            <!-- <span id="current-email"></span> -->

          <!-- /col -->
          </div>
          <div class="col">

            <label for="user_phone">Telephone:</label>
            <input id="tel" type="text" class="form-control" placeholder="555-555-5555">
            <!-- <span id="current-phone"></span> -->
          <!-- /col -->
          </div>
        <!-- /form-row -->
        </div>

        <button type="submit">Update</button>
      </form>
      <!-- /col -->
      </div>
    <!-- /row -->
    </div>
  <!-- /container -->
  </div>

  <% include partials/footer %>

 </body>
</html>
