  <body>

  <% include partials/navbar %>


<div class="container">
<!-- main grid -->
  <div class="row">
    <div class="col-sm-8">
    <p class= "main-heading">Checkout<p>
      <!-- nested grid -->
      <!-- pick up location -->
      <div class="row">
        <div class="col-sm-12 box">
          <p class="subheading"">Your pickup location: </p>
          <!-- google maps -->
          <div id="map"></div>
        </div>
      </div>
      <!-- confirm your order -->
      <div class="row">
        <div class="col-sm-12 box">
          <p class="subheading"">Confirm your order details</p>
      <!-- place order form  -->
          <form action="" method="">
            <!-- confirm order -->
            <label for="telphone">Comfirm your telphone number:</label>
            <input type="tel" class="form-control" id="confirm-tel" placeholder="555-555-5555">
            <!-- select payment -->
            <label for="payment">Select payment method:</label>
            <select class="form-control">
              <option>credit card</option>
              <option>cash on pickup</option>
            </select>
              <!-- select pick up date and tiem -->
            <label for="pickuptime">Select your pickup time:</label><br>
            <input id="asap" class="radio" type="radio" value="asap" name="timechoice">ASAP</input>
            <input id="pick-time" class="radio" type="radio" value="choosedate" name="timechoice">Pick a time</input><br>
                <!-- date toggle -->
            <div id="time">
              <label for="pickuptime">Select a date and time:</label>
              <input class="form-control" type="datetime-local" name="ordertime">
            </div>
                 <!-- submit button -->
              <input type="submit" value="Place your order" id="order">
            </form>
          </div>
        </div>
      </div>
    <!-- sidebar -->
    <div id="cart" class="col-sm-4 sidebar">
      sidebar
    </div>
  </div>
</div>

  <% include partials/footer %>




