<!doctype html>
<html lang="en">
  <head>
    <title>Checkout</title>

    <!-- styles -->

    <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
    <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
    <link rel="stylesheet" href="/styles/layout.css" type="text/css" />
    <link rel="stylesheet" href="/styles/checkout.css" type="text/css" />
    <link rel="stylesheet" href="/styles/cart.css" type="text/css" />
    <link rel="stylesheet" href="/styles/navbar.css" type="text/css" />
    <link rel="stylesheet" href="/styles/footer.css" type="text/css" />

    <!-- jQuery -->

    <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>

    <!-- user Cookie and location selection -->

    <script>
      const currUser = "<%= currUser %>";
      const location_id = "<%= location_id %>";
    </script>

    <!-- scripts -->

    <script type="text/javascript" src="/scripts/sign-in.js"></script>
    <script type="text/javascript" src="/scripts/googlemap.js"></script>
    <script type="text/javascript" src="/scripts/place-order.js"></script>
    <script type="text/javascript" src="/scripts/checkout-details.js"></script>

    <!-- bootstrap -->

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>

    <!-- fonts -->

    <link href="https://fonts.googleapis.com/css?family=Bungee+Shade" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Arbutus+Slab" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Chivo" rel="stylesheet">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <!-- GoogleMaps -->

    <script async defer
      src="https://maps.googleapis.com/maps/api/js?key=&callback=initMap"> //ADD KEY
    </script>

  </head>

  <body>
    <% include partials/navbar %>

    <div class="container">
      <!-- main grid -->
      <div class="row">
        <div class="col-sm-8">
          <p class= "main-heading">Checkout<p>
            <!-- nested grid -->
            <!-- pick up location -->
          <div class="row">
            <div class="col-sm-12">
              <p class="subheading"">Your pickup location: </p>
              <!-- google maps -->
              <div id="map"></div>
            </div>
          </div>
          <!-- confirm your order -->
          <div class="row">
            <div class="col-sm-12">
              <p class="subheading"">Confirm your order details</p>
          <!-- place order form  -->
              <form class="box">
                <!-- confirm order -->
                <label for="telphone">Comfirm your telphone number:</label>
                <input type="tel" class="form-control" id="confirm-tel" placeholder="Please enter your number (no dashes or spaces)">
                <!-- select payment -->
                <label for="payment">Select payment method:</label>
                <select class="form-control">
                  <!-- <option>credit card</option> -->
                  <option>cash on pickup</option>
                </select>

              </form>
            </div>
          </div>
        </div>
        <!-- sidebar -->
        <div id="cart" class="col-sm-4">
        </div>
      </div>
    </div>

    <script>
      placeOrder(document.cookie, currUser, location_id);
    </script>

    <% include partials/footer %>
  </body>

</html>
